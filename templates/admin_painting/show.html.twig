{% extends 'base.html.twig' %}

{% block title %}{{ painting.title }}{% endblock %}

{% block body %}
    <h1 class="d-flex flex-row justify-content-center my-3">{{ painting.title }}</h1>
    <div class="m-5 table-responsive">
        <table class="table table-striped">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ painting.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ painting.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ painting.date ? painting.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Anecdote</th>
                <td>{{ painting.anecdote }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ painting.height }}</td>
            </tr>
            <tr>
                <th>Width</th>
                <td>{{ painting.width }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ painting.image }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ painting.createdAt ? painting.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="mx-3">
    <a class="btn btn-primary my-3" href="{{ path('app_admin_painting_index') }}">Retour Ã  l'index</a>

    <a class="btn btn-info" href="{{ path('app_admin_painting_edit', {'id': painting.id}) }}">Edit</a>

