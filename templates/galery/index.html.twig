{% extends 'base.html.twig' %}

{% block title %}Galerie
{% endblock %}

{% block body %}


	<div class="container mt-1 p-3 ">
        <div class= "d-flex flex-row justify-content-center">

            <div>
                <h4 class="text-center fw-normal">Tapez ici votre recherche</h4>

                <div class="d-flex gap-2 mb-2">
                    <div>{{ form_start(form) }}
                    {{ form_widget(form.search,{ 'attr': {'placeholder': "Artiste, oeuvre ..."} }) }}</div>
                    <a class="btn btn-primary" href="{{ path('galery_index') }}">reset</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
		<div class=" card-deck grid gap-4 mt-2 mx-3">
			{% for painting in paintings %}
				<div class="galery card-apparition position-relative overflow-hidden ">
                    <a href="{{  path('painting_show', { id: painting.id})}}">
                        <img class="w-100 h-100 object-fit-cover" src=" {{ vich_uploader_asset(painting)|imagine_filter('watermark_bottom') }}" alt="aperçu de l'oeuvre {{painting.title}} réalisé par {{painting.artist.name}}.">
                    </a>
					<div class="position-absolute bg-black w-100 z-1 bottom-0 bg-opacity-50 p-3 d-flex flex-column">
						<p class="text-white m-0">{{painting.title}}</p>
						<a class=" text-decoration-none text-white" href="{{ path('artist_show', { id: painting.artist.id }) }}">{{painting.artist.name}}</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
    <div class="d-flex justify-content-center ">{{ knp_pagination_render(paintings) }}</div>

{% endblock %}
