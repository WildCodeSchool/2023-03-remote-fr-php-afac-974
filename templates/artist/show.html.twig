{% extends 'base.html.twig' %}

{% block body %}
<div class="main-artist row mt-3 pt-5 justify-content-between w-100">
    <div class="text order-lg-0 mb-5 col">
        <h1 class="artist-name d-flex flex-row fw-bold justify-content-start text-black pb-1">{{ artist.name }}</h1>
        <div class="d-flex flex-row justify-content-start">
            <p class="nationality pt-1 text-black ">{{ artist.nationality }}</p>
            <p class="date-of-birth align-self-end text-black px-5">
                {{ artist.dateOfBirth|date('d/m/Y') }}</p>
        </div>
        <div class="biography mt-5">
            <p class="text-black ">{{ artist.biography }}</p>
        </div>
    </div>
    <div class="clip-path d-flex mt-3 pb-3 col justify-content-center align-self-center">
        <div class="hexagon-2 order-lg-2">
            {% if artist.image %}
                <img class="img-fluid" src="{{ vich_uploader_asset(artist) }}" alt="Logo">
            {% else %}
            <img class="img-fluid" src="{{ asset('build/images/artist.png') }}" alt="Logo">
            {% endif %}
        </div>
    </div>
</div>

<div class=" d-flex flex-column  pt-5">
    <h2 class="work text-black align-self-center p-3"> Ses oeuvres</h2>
    <div class="row">
        {% for painting in artist.paintings %}
            <div class="col-md-6 col-xl-3 mt-3 mb-3">
                <div class="galery card-apparition position-relative overflow-hidden mx-2 mb-2">
                    <img class="w-100 h-100 object-fit-cover" src=" {{ vich_uploader_asset(painting)|imagine_filter('watermark_bottom')|imagine_filter('limit400') }}"
                         alt="aperçu de l'oeuvre {{painting.title}} réalisé par {{painting.artist.name}}.">

                    <a href="#" class="stretched-link">
                        <span class="visually-hidden-focusable">voir le détail</span>
                    </a>
                    <div class="position-absolute w-100 z-1 bottom-0 bg-opacity-50 p-3 d-flex flex-column">
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block title %}
    {{ artist.name }}
{% endblock %}

